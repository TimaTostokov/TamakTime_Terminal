<resources>

    <style name="Base.Theme.TamakTime_Temirnal" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryVariant">@color/primaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="materialButtonStyle">@style/MyButtonStyle</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@android:color/white</item>
        <item name="boxStrokeErrorColor">@color/balance_error</item>
        <item name="labelStyle">@style/MyLabelStyle</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:radius">30dp</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="startIconTint">@android:color/white</item>
        <item name="boxCornerRadiusBottomStart">6dp</item>
        <item name="boxCornerRadiusBottomEnd">6dp</item>
        <item name="boxCornerRadiusTopStart">6dp</item>
        <item name="boxCornerRadiusTopEnd">6dp</item>
    </style>

    <style name="MyLabelStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="colorError">@color/balance_error</item>
        <item name="color">@color/white</item>
        <item name="colorOnError">@color/balance_error</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="MyButtonStyle" parent="@style/Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/btn_color_selector</item>
        <item name="rippleColor">@color/purple_200</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">6dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.TamakTime_Temirnal" parent="Base.Theme.TamakTime_Temirnal" />
</resources>